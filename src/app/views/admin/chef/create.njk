{% extends 'layouts/admin.njk' %}

{% block titlePage %}
  <title>{{ title }}
    - Administração Foodfy</title>
{% endblock titlePage %}

{% block content %}
  <div class="dashboard">
    <header class="dashboard__header">
      <h1 class="dashboard__title">Criar Chef</h1>
      <button type="submit" form="create-chef" class="button">Salvar</button>
    </div>
  </header>
  <form action="/admin/chefs" method="post" enctype="multipart/form-data" class="dashboard__form dashboard__form--1-column" id="create-chef">
    <div class="field">
      <label class="field__label" for="name">Nome</label>
      <input class="field__input" type="text" name="name" id="name" placeholder="Digite o nome completo">
    </div>
    <div class="field">
      <span class="field__label">Avatar</span>
      <label class="button" for="file">Enviar Avatar</label>
      <input type="file" name="file" id="file" accept="image/jpg, image/jpeg, image/pjpeg, image/png, image/gif" class="d-none">
    </div>
  </form>
</div>
{% endblock content %}
