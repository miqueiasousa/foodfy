{% extends 'layouts/session.njk' %}

{% block titlePage %}
  <title>{{ title }}
    - Administração Foodfy</title>
{% endblock titlePage %}

{% block content %}
  <div class="session">
    <h1 class="session__title">Nova Senha</h1>
    <form action="/admin/users/reset-password" method="post" class="session__form" id="reset_password">
      <div class="field">
        <label class="field__label" for="email">Email</label>
        <input class="field__input" type="email" name="email" id="email" placeholder="Digite seu email">
      </div>
      <div class="field">
        <label class="field__label" for="password">Nova senha</label>
        <input class="field__input" type="password" name="password" id="password" placeholder="Digite sua nova senha" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[A-z\d]{6,}$">
      </div>
      <div class="field">
        <label class="field__label" for="repeat_password">Repetir senha</label>
        <input class="field__input" type="password" name="repeat_password" id="repeat_password" placeholder="Repita a nova senha" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[A-z\d]{6,}$">
      </div>
      <input type="hidden" name="token" value="{{ token }}">
    </form>
    <div class="session__menu-action">
      <div></div>
      <button class="button" type="submit" form="reset_password">Nova Senha</button>
    </div>
  </div>
{% endblock content %}
