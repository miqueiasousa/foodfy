{% extends 'layouts/session.njk' %}

{% block titlePage %}
  <title>{{ title }}
    - Administração Foodfy</title>
{% endblock titlePage %}

{% block content %}
  <div class="session">
    <h1 class="session__title">Esqueceu a Senha?</h1>
    <form action="/admin/users/forgot-password" method="post" class="session__form" id="forgot-password">
      <div class="field">
        <label class="field__label" for="email">Email</label>
        <input class="field__input" type="email" name="email" id="email" placeholder="Digite seu email para recuperar sua senha">
      </div>
    </form>
    <div class="session__menu-action">
      <div></div>
      <button class="button" type="submit" form="forgot-password">Recuperar</button>
    </div>
  </div>
{% endblock content %}
