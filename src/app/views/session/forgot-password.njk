{% extends 'layouts/session.njk' %}

{% block titlePage %}
  <title>{{ title }}
    - Administração Foodfy</title>
{% endblock titlePage %}

{% block content %}
  <div class="session-content">
    <h1 class="session-content__title f-weight-bold f-size-24px">Esqueceu a Senha?</h1>
    <form class="session-content__form" action="/admin/users/forgot-password" method="post" id="forgot-password">
      <div class="field">
        <label class="field__label" for="email">Email</label>
        <input class="field__input" type="email" name="email" id="email" placeholder="Digite seu email para recuperar sua senha">
      </div>
    </form>
    <div class="session-content__action">
      <div></div>
      <button class="button-submit" type="submit" value="forgot-password" form="forgot-password">Recuperar</button>
    </div>
  </div>
{% endblock content %}
