{% extends 'layouts/session.njk' %}

{% block titlePage %}
  <title>{{ title }}
    - Administração Foodfy</title>
{% endblock titlePage %}

{% block content %}
  <div class="session">
    <h1 class="session__title">Iniciar Sessão</h1>
    <form action="/admin/users/login" method="post" class="session__form" id="login">
      <div class="field">
        <label class="field__label" for="email">Email</label>
        <input class="field__input" type="email" name="email" id="email" placeholder="Digite seu email">
      </div>
      <div class="field">
        <label class="field__label" for="password">Senha</label>
        <input class="field__input" type="password" name="password" id="password" placeholder="Digite sua senha">
      </div>
    </form>
    <div class="session__menu-action">
      <a class="link-session" href="/admin/users/forgot-password">Perdeu a senha?</a>
      <button class="button" type="submit" form="login">Acessar</button>
    </div>
  </div>
{% endblock content %}
