{% extends 'layouts/session.njk' %}

{% block titlePage %}
  <title>{{ title }}
    - Administração Foodfy</title>
{% endblock titlePage %}

{% block content %}
  <div class="session-content">
    <h1 class="session-content__title f-weight-bold f-size-24px">Iniciar Sessão</h1>
    <form class="session-content__form" action="/admin/users/login" method="post" id="login">
      <div class="field">
        <label class="field__label" for="email">Email</label>
        <input class="field__input" type="email" name="email" id="email" placeholder="Digite seu email">
      </div>
      <div class="field">
        <label class="field__label" for="password">Senha</label>
        <input class="field__input" type="password" name="password" id="password" placeholder="Digite sua senha">
      </div>
    </form>
    <div class="session-content__action">
      <a class="color-gray-light f-weight-bold" href="/admin/users/forgot-password">Perdeu a senha?</a>
      <button class="button-submit" type="submit" value="login" form="login">Acessar</button>
    </div>
  </div>
{% endblock content %}
